            _selectedDate = newDate.Value.Date;
            CalculateGlucoseStats();
            PrepareGlucoseChart();
            PrepareTimelineData();
            StateHasChanged();
        }
    }

    private void CalculateGlucoseStats()
    {
        if (!_glucoseLevels.Any() || !_selectedDate.HasValue)
        {
            _glucoseStats = (0, 0, 0, 0);
            _glucoseRangePercentages = (0, 0, 0, 0, 0);
            return;
        }

        var selectedDay = _selectedDate.Value.Date;
        var selectedDayEnd = selectedDay.AddDays(1).AddSeconds(-1);

        // Get readings for the selected day only
        var dailyReadings = _glucoseLevels
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .ToList();

        if (!dailyReadings.Any())
        {
            _glucoseStats = (0, 0, 0, 0);
            _glucoseRangePercentages = (0, 0, 0, 0, 0);
            return;
        }

        var values = dailyReadings.Select(x => x.HealthValue.NumericValue).ToList();
        var totalCount = values.Count;

        _glucoseStats = (
            Average: values.Average(),
            Min: values.Min(),
            Max: values.Max(),
            Count: totalCount
        );

        // Calculate range percentages for selected day only
        var veryLowCount = values.Count(v => v <= 3.0);
        var lowCount = values.Count(v => v >= 3.1 && v <= 3.9);
        var inRangeCount = values.Count(v => v >= 4.0 && v <= 9.9);
        var highCount = values.Count(v => v >= 10.0 && v <= 13.8);
        var veryHighCount = values.Count(v => v >= 13.9);

        _glucoseRangePercentages = (
            VeryLow: (veryLowCount / (double)totalCount) * 100,
            Low: (lowCount / (double)totalCount) * 100,
            InRange: (inRangeCount / (double)totalCount) * 100,
            High: (highCount / (double)totalCount) * 100,
            VeryHigh: (veryHighCount / (double)totalCount) * 100
        );

        // Prepare data for range chart (single category with all ranges stacked)
        _rangeChartData = new List<RangePercentageData>
        {
            new RangePercentageData { Category = "Time in Range", Percentage = _glucoseRangePercentages.VeryLow },
            new RangePercentageData { Category = "Time in Range", Percentage = _glucoseRangePercentages.Low },
            new RangePercentageData { Category = "Time in Range", Percentage = _glucoseRangePercentages.InRange },
            new RangePercentageData { Category = "Time in Range", Percentage = _glucoseRangePercentages.High },
            new RangePercentageData { Category = "Time in Range", Percentage = _glucoseRangePercentages.VeryHigh }
        };
    }

    private void PrepareGlucoseChart()
    {
        if (!_glucoseLevels.Any() || !_selectedDate.HasValue)
        {
            return;
        }

        var selectedDay = _selectedDate.Value.Date;
        var selectedDayEnd = selectedDay.AddDays(1).AddSeconds(-1);
        _selectedDayLabel = selectedDay.ToString("MMM dd");

        // Get readings for the selected day
        var dailyReadings = _glucoseLevels
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .OrderBy(x => x.DateFrom)
            .ToList();

        // Create 10-minute buckets for the full 24-hour period (144 buckets)
        _dailyData = new List<GlucoseDataPoint>();
        _weeklyRangeData = new List<GlucoseDataPoint>();

        for (int i = 0; i < 144; i++)
        {
            var bucketStart = selectedDay.AddMinutes(i * 10);
            var bucketEnd = bucketStart.AddMinutes(10);

            // Get daily value for this bucket (average if multiple readings)
            var dailyValues = dailyReadings
                .Where(x => x.DateFrom >= bucketStart && x.DateFrom < bucketEnd)
                .Select(x => x.HealthValue.NumericValue)
                .ToList();

            var dailyValue = dailyValues.Any()
            ? (decimal?)Math.Round(dailyValues.Average(), 1)
            : null;

            _dailyData.Add(new GlucoseDataPoint
            {
                Time = bucketStart,
                Value = dailyValue
            });

            // Calculate weekly min/max for this time of day across past 7 days
            var weeklyValues = new List<double>();
            for (int day = 0; day <= 7; day++)
            {
                var dayToCheck = _startDate.Date.AddDays(day);
                var timeStart = dayToCheck.Add(bucketStart.TimeOfDay);
                var timeEnd = timeStart.AddMinutes(10);

                var valuesInBucket = _glucoseLevels
                    .Where(x => x.DateFrom >= timeStart && x.DateFrom < timeEnd)
                    .Select(x => x.HealthValue.NumericValue)
                    .ToList();

                if (valuesInBucket.Any())
                {
                    weeklyValues.AddRange(valuesInBucket);
                }
            }

            // Always add a weekly range point for this bucket
            decimal? weeklyMinDec = null;
            decimal? weeklyMaxDec = null;

            if (weeklyValues.Any())
            {
                weeklyMinDec = (decimal)Math.Round(weeklyValues.Min(), 1);
                weeklyMaxDec = (decimal)Math.Round(weeklyValues.Max(), 1);
            }

            _weeklyRangeData.Add(new GlucoseDataPoint
            {
                Time = bucketStart,
                Min = weeklyMinDec,
                Max = weeklyMaxDec
            });
        }
    }

    private void PrepareTimelineData()
    {
        if (!_selectedDate.HasValue)
        {
            return;
        }

        var selectedDay = _selectedDate.Value.Date;
        var selectedDayEnd = selectedDay.AddDays(1).AddSeconds(-1);

        // Get readings for the selected day
        var dailyGlucoseReadings = _glucoseLevels
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .OrderBy(x => x.DateFrom)
            .ToList();

        var dailyHeartRateReadings = _heartRates
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .OrderBy(x => x.DateFrom)
            .ToList();

        var dailyWorkouts = _workouts
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .OrderBy(x => x.DateFrom)
            .ToList();

        var dailySleepSessions = _sleepSessions
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .OrderBy(x => x.DateFrom)
            .ToList();

        var dailyMedications = _medications
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .OrderBy(x => x.DateFrom)
            .ToList();

        var dailyMenstruation = _menstruation
            .Where(x => x.DateFrom >= selectedDay && x.DateFrom <= selectedDayEnd)
            .FirstOrDefault();

        // Create 10-minute buckets for glucose
        _timelineGlucoseData = new List<TimelineDataPoint>();
        for (int i = 0; i < 144; i++)
        {
            var bucketStart = selectedDay.AddMinutes(i * 10);
            var bucketEnd = bucketStart.AddMinutes(10);

            var values = dailyGlucoseReadings
                .Where(x => x.DateFrom >= bucketStart && x.DateFrom < bucketEnd)
                .Select(x => x.HealthValue.NumericValue)
                .ToList();

            var value = values.Any()
                ? (decimal?)Math.Round(values.Average(), 1)
                : null;

            if (value.HasValue)
            {
                _timelineGlucoseData.Add(new TimelineDataPoint
                {
                    Time = bucketStart,
                    Value = value
                });
            }
        }

        // Create 10-minute buckets for heart rate
        _timelineHeartRateData = new List<TimelineDataPoint>();
        for (int i = 0; i < 144; i++)
        {
            var bucketStart = selectedDay.AddMinutes(i * 10);
            var bucketEnd = bucketStart.AddMinutes(10);

            var values = dailyHeartRateReadings
                .Where(x => x.DateFrom >= bucketStart && x.DateFrom < bucketEnd)
                .Select(x => x.HealthValue.NumericValue)
                .ToList();

            var value = values.Any()
                ? (decimal?)Math.Round(values.Average(), 0)
                : null;

            if (value.HasValue)
            {
                _timelineHeartRateData.Add(new TimelineDataPoint
                {
                    Time = bucketStart,
                    Value = value
                });
            }
        }

        // Create workout area indicators
        _timelineWorkoutData = new List<TimelineDataPoint>();
        foreach (var workout in dailyWorkouts)
        {
            var startTime = workout.DateFrom;
            var endTime = workout.DateTo ?? workout.DateFrom.AddHours(1); // Default 1 hour if no end time

            // Add point just before workout starts (0 value)
            _timelineWorkoutData.Add(new TimelineDataPoint
            {
                Time = startTime.AddSeconds(-1),
                Value = 0
            });

            // Add point at workout start (goes up to 2.5 on glucose scale)
            _timelineWorkoutData.Add(new TimelineDataPoint
            {
                Time = startTime,
                Value = 2.5m
            });

            // Add point at workout end (still at 2.5)
            _timelineWorkoutData.Add(new TimelineDataPoint
            {
                Time = endTime,
                Value = 2.5m
            });

            // Add point just after workout ends (back to 0)
            _timelineWorkoutData.Add(new TimelineDataPoint
            {
                Time = endTime.AddSeconds(1),
                Value = 0
            });
        }

        // Sort workout data by time
        _timelineWorkoutData = _timelineWorkoutData.OrderBy(x => x.Time).ToList();

        // Create sleep area indicators
        _timelineSleepData = new List<TimelineDataPoint>();
        foreach (var sleep in dailySleepSessions)
        {
            var startTime = sleep.DateFrom;
            var endTime = sleep.DateTo ?? sleep.DateFrom.AddHours(8); // Default 8 hours if no end time

            // Add point just before sleep starts (0 value)
            _timelineSleepData.Add(new TimelineDataPoint
            {
                Time = startTime.AddSeconds(-1),
                Value = 0
            });

            // Add point at sleep start (full height)
            _timelineSleepData.Add(new TimelineDataPoint
            {
                Time = startTime,
                Value = 2.5m
            });

            // Add point at sleep end (still at full height)
            _timelineSleepData.Add(new TimelineDataPoint
            {
                Time = endTime,
                Value = 2.5m
            });

            // Add point just after sleep ends (back to 0)
            _timelineSleepData.Add(new TimelineDataPoint
            {
                Time = endTime.AddSeconds(1),
                Value = 0
            });
        }

        // Sort sleep data by time
        _timelineSleepData = _timelineSleepData.OrderBy(x => x.Time).ToList();

        // Create medication markers
        _timelineMedicationData = new List<TimelineDataPoint>();
        foreach (var medication in dailyMedications)
        {
            _timelineMedicationData.Add(new TimelineDataPoint
            {
                Time = medication.DateFrom,
                Value = 12.5m, // Middle of glucose scale (0-25)
                Name = medication.Medication.Name ?? "Medication"
            });
        }

        // Create menstruation band (thin band at bottom for full day)
        _timelineMenstruationData = new List<TimelineDataPoint>();
        if (dailyMenstruation != null)
        {
            // Add points for the full 24-hour period
            _timelineMenstruationData.Add(new TimelineDataPoint
            {
                Time = selectedDay,
                Value = 5.25m // Full height of the menstruation axis
            });

            _timelineMenstruationData.Add(new TimelineDataPoint
            {
                Time = selectedDay.AddHours(23).AddMinutes(59).AddSeconds(59),
                Value = 5.25m
            });
        }
    }
