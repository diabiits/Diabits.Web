@using Diabits.Web.Features.Auth.Services

<MudDialog>
    <DialogContent>
        <MudStack Spacing="2">
            <MudText Typo="Typo.body1" >
                You are about to change your
                @if (HasUsernameChange && HasPasswordChange)
                {
                    <strong>username and password</strong>
                }
                else if (HasUsernameChange)
                {
                    <strong>username</strong>
                }
                else if (HasPasswordChange)
                {
                    <strong>password</strong>
                }
                .
            </MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Please enter your current password to confirm these changes.
            </MudText>

            <MudTextField @bind-Value="_currentPassword"
                          Label="Current Password"
                          Variant="Variant.Outlined"
                          InputType="@(_passwordHidden? InputType.Password: InputType.Text)"
                          AdornmentIcon="@(_passwordHidden? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                          Adornment="Adornment.End"
                          OnAdornmentClick="() => _passwordHidden = !_passwordHidden"
                          Required="true"
                          Immediate="true"
                          OnKeyDown="HandleKeyDown"
                          AutoFocus="true" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="Confirm"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="string.IsNullOrWhiteSpace(_currentPassword)">
            Confirm
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public bool HasUsernameChange { get; set; }

    [Parameter]
    public bool HasPasswordChange { get; set; }

    private string _currentPassword = "";
    private bool _passwordHidden = true;

    private void Cancel() => MudDialog.Cancel();

    private void Confirm()
    {
        if (!string.IsNullOrWhiteSpace(_currentPassword))
        {
            MudDialog.Close(DialogResult.Ok(_currentPassword));
        }
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Confirm();
        }
    }
}