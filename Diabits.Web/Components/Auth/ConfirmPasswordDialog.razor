<MudDialog>
    <DialogContent>
        <MudStack Spacing="1">
            <MudText Typo="Typo.body1">
                You are about to change your <strong>@ChangeText</strong>.
            </MudText>

            <MudText Typo="Typo.body2" >
                Please enter your current password to confirm these changes.
            </MudText>

            <MudTextField @bind-Value="_currentPassword"
                          Label="Current Password"
                          Variant="Variant.Outlined"
                          InputType="@(_passwordHidden? InputType.Password: InputType.Text)"
                          AdornmentIcon="@(_passwordHidden? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                          Adornment="Adornment.End"
                          OnAdornmentClick="() => _passwordHidden = !_passwordHidden"
                          Required="true"
                          Immediate="true"
                          OnKeyDown="HandleKeyDown" />
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Confirm" Disabled="string.IsNullOrWhiteSpace(_currentPassword)">
            Confirm
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public bool HasUsernameChange { get; set; }

    [Parameter]
    public bool HasPasswordChange { get; set; }

    private string _currentPassword = "";
    private bool _passwordHidden = true;

    private string ChangeText => (HasUsernameChange, HasPasswordChange) switch
    {
        (true, true) => "username and password",
        (true, false) => "username",
        (false, true) => "password",
        _ => "account settings"
    };

    private void Confirm() => MudDialog.Close(DialogResult.Ok(_currentPassword));

    private void Cancel() => MudDialog.Cancel();

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")       
            Confirm();        
    }
}